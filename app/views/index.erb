<% if @today_plants %>
  <%= erb :'partials/_page', locals: { day: @today, plants: @today_plants } %>
  <p>
  <p align="center">
    <%= greeting() %> There are <%= @today_plants.size %> plants that need attention today!</p>
<% else %>
  <div class="container-fluid text-left" >
    <p align="center" style="margin-top: 20px">
      <%= greeting() %> Today is <%= Date.today %>
      <br>There are no plants that need attention today!</p>
  </div>
<% end %>
